<%= form_for (@book) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@book.errors.count, "Erro") %> - Confira os dados: </h2>

	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>
<br>
<div class="field">
	<%= f.label :nome %>
	<%= f.text_field :nome, autofocus: true %>
</div><br/>
<div class="field">
	<%= f.label :autor %>
	<%= f.text_field :autor %>
</div><br/>
<div class="field">
	<%= f.label :quantidade %>
	<%= f.text_field :quantidade_estoque %>
</div><br/>
<div class="field">
	<%= f.label :descricao %>
	<%= f.text_area :descricao, size:"23" %>
</div>
<p class="actions">
	<%= f.submit 'Registrar' %>
</p>
<% end %>